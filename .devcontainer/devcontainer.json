// For format details, see https://aka.ms/devcontainer.json
{
	"name": "Dockenv Fully",
	"image": "ghcr.io/dockenv/boxs:ubuntu",
	// CodeSandBox /project Persistence Storage
	// "workspaceFolder": "/project/${localWorkspaceFolderBasename}",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts"
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/go:1": {},
		"ghcr.io/devcontainers/features/java:1": {
			"installGradle": true,
			"installMaven": true,
			"installAnt": true
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
		"ghcr.io/devcontainers/features/nix:1": {}
	},
	"forwardPorts": [
		8080,
		3306,
		1433
	],
	// CodeSandbox Not Suport, replace it with .codesandbox/tasks.json
	"portsAttributes": {
		"8080": {
			"label": "Web Server Port"
		},
		"3306": {
			"label": "MYSQL/Mariadb Port"
		},
		"1433": {
			"label": "MSSQL Port"
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"editor.fontSize": 16,
				"editor.formatOnPaste": true,
				"editor.formatOnSave": false
			},
			"extensions": [
				"redhat.vscode-xml"
			]
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "whoami"
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "dockenv"
}